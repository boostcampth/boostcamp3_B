<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noActionBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv.round">
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/aller_default</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">@dimen/sign_in_et_width</item>
        <item name="android:layout_height">@dimen/sign_in_et_height</item>
        <item name="android:textSize">@dimen/sign_in_et_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="tv.accent">
        <item name="android:background">@drawable/tv_accent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/aller_default</item>
        <item name="android:layout_width">@dimen/sign_in_et_width</item>
        <item name="android:layout_height">@dimen/sign_in_et_height</item>
        <item name="android:textSize">@dimen/sign_in_et_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv.accent.small">
        <item name="android:layout_width">@dimen/write_tv_width</item>
        <item name="android:layout_height">@dimen/write_tv_height</item>
        <item name="android:textSize">@dimen/write_tv_text_size</item>
    </style>

    <style name="tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aller_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    /* Text Style Base */
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle.Regular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Regular.Title"><item name="android:textSize">@dimen/text_size_H5</item></style>
    <style name="TextStyle.Regular.SubTitle"><item name="android:textSize">@dimen/text_size_H6</item></style>
    <style name="TextStyle.Regular.Medium"><item name="android:textSize">@dimen/text_size_m</item></style>
    <style name="TextStyle.Regular.Small"><item name="android:textSize">@dimen/text_size_s</item></style>

    <style name="TextStyle.Bold.Title"><item name="android:textSize">@dimen/text_size_H5</item></style>
    <style name="TextStyle.Bold.SubTitle"><item name="android:textSize">@dimen/text_size_H6</item></style>
    <style name="TextStyle.Bold.Medium"><item name="android:textSize">@dimen/text_size_m</item></style>
    <style name="TextStyle.Bold.Small"><item name="android:textSize">@dimen/text_size_s</item></style>

    /* Edit Text */
    <style name="Basic_EditText" parent="TextStyle.Regular.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
</resources>
