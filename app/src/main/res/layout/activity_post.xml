<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.swsnack.catchhouse.viewmodel.postviewmodel.PostViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:title="@string/tb_post" />
        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_post_title"
                        style="@style/TextStyle.Bold.Title"
                        android:layout_gravity="center" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vp_post"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_margin="8dp"
                        android:layout_marginTop="24dp"
                        app:adapter="@{handler.mImageList}" />

                    <TextView
                        style="@style/TextStyle.Bold.SubTitle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/tv_post_price" />

                    <TextView
                        android:id="@+id/tv_post_price"
                        style="@style/TextStyle.Regular.Title"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@{handler.mExpectedPrice}" />

                    <TextView
                        android:id="@+id/tv_post_option_tag"
                        style="@style/TextStyle.Regular.Medium"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@{handler.mOptionTag}"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        style="@style/TextStyle.Bold.SubTitle"
                        android:layout_marginTop="24dp"
                        android:text="@string/tv_post_room_info" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle.Regular.Medium"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:text="@string/tv_post_address" />

                        <TextView
                            android:id="@+id/tv_post_address"
                            style="@style/TextStyle.Regular.Medium"
                            android:layout_width="0dp"
                            android:layout_weight="0.75" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle.Regular.Medium"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:text="@string/tv_post_size" />

                        <TextView
                            android:id="@+id/tv_post_size"
                            style="@style/TextStyle.Regular.Medium"
                            android:layout_width="0dp"
                            android:layout_weight="0.75" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle.Regular.Medium"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:text="@string/tv_post_date" />

                        <TextView
                            android:id="@+id/tv_post_period"
                            style="@style/TextStyle.Regular.Medium"
                            android:layout_width="0dp"
                            android:layout_weight="0.75" />

                    </LinearLayout>


                    <TextView
                        style="@style/TextStyle.Bold.SubTitle"
                        android:layout_marginTop="24dp"
                        android:text="@string/tv_post_map" />

                    <LinearLayout
                        android:id="@+id/ll_post_tmap_container"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp" />

                    <TextView
                        android:id="@+id/tv_post_content"
                        style="@style/TextStyle.Regular.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/et_round_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/tv_post_send"
                        style="@style/tv.accent"
                        android:layout_width="match_parent"
                        android:layout_marginStart="64dp"
                        android:layout_marginEnd="64dp"
                        android:text="@string/tv_post_chat" />
                </LinearLayout>
            </ScrollView>

            <ProgressBar
                android:id="@+id/pg_post"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>